{
  "name": "lotus-island",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "prisma generate && next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "db:init": "dotenv -e .env -- tsx scripts/init-database.ts",
    "db:check": "dotenv -e .env -- tsx scripts/check-database.ts",
    "db:reset": "node database/execute-sql.js reset.sql",
    "deploy": "dotenv -e .env -- node scripts/deploy.js",
    "deploy:prod": "dotenv -e .env.production -- node scripts/deploy.js",
    "deploy:staging": "dotenv -e .env.staging -- node scripts/deploy.js",
    "verify": "node scripts/verify-deployment.js",
    "check-env": "node scripts/check-env.js",
    "vercel-build": "node scripts/vercel-build.js",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "@types/jsonwebtoken": "^9.0.10",
    "jsonwebtoken": "^9.0.2",
    "next": "15.5.0",
    "prisma": "^6.14.0",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/pg": "^8.15.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "pg": "^8.16.3",
    "tailwindcss": "^4",
    "tsx": "^4.20.4",
    "typescript": "^5"
  }
}